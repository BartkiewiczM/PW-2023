<div class="container mx-auto px-4">
  <div style="display: flex; flex-direction: column; align-items: center;">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= form_for "Login",
          url: omniauth_authorize_path(resource_name, provider),
          method: :post,
          data: {turbo: "false"} do |f| %>
            <%= f.button(type: "submit", style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';") do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="w-4 h-4 mr-2" fill="#000"><path d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"/></svg>
              Log in with Google
            <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div style="display: flex; flex-direction: column; align-items: center;">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';" %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';" %>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), style: "display: inline-flex; align-items: center; justify-content: center; background-color: #ffffff; color: #000; padding: 8px 32px; border-radius: 0.375rem; font-size: 0.875rem; font-weight: 600; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); margin-bottom: 1rem; width: 250px;", onmouseover: "this.style.backgroundColor='#e5e7eb';", onmouseout: "this.style.backgroundColor='#ffffff';" %>
    <% end %>
  </div>
</div>
